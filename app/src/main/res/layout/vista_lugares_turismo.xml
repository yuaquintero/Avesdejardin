<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svVistaTurismo"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvtitulovista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/tituloturismo"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:padding="16dp"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:id="@+id/relativeLayout">

            <TextView

                android:id="@+id/tVsitio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHARCOS EL ANGEL"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/iv_tur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_view"
                android:layout_marginStart="20dp"
                android:layout_above="@+id/ratingBar"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tVtextositio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurante, truchera y mas"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/iv_tur"
                android:layout_toEndOf="@+id/iv_tur"
                android:layout_marginStart="71dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/iv_tur"
                android:layout_marginStart="38dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>